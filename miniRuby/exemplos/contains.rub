n = 0;
found = 0;
chances = 2;
attempts = [];
sum = 3;
while n < chances and found != 1 do
	n = n + 1;
	puts 'volta';
	x = gets.to_i;
	if x === attempts then
		puts attempts;
		puts 'Voce ja tentou o valor ' + x.to_s;
		n = n - 1;
	else
		if x < sum
			puts 'O valor e maior que ' + x.to_s;
		elsif x > sum
			puts 'O valor e menor que ' + x.to_s;
		else
			puts 'Parabens, voce acertou.';
			found = 1;
		end
		puts 'inserindo';
		attempts = attempts + [x];

	end
end
